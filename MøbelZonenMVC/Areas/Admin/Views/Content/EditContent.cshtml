@using RepoMZ
@ValidateRequestMode.Disabled
@model RepoMZ.Indhold
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
 <!-- TinyMCE Script Reference -->

